@using Microsoft.AspNetCore.Identity
@using Biblioteca.Areas.Identity.Data

@inject SignInManager<BibliotecaUser> SignInManager
@inject UserManager<BibliotecaUser> UserManager

<ul class="navbar-nav">
@if (SignInManager.IsSignedIn(User))
{
    <li class="nav-item">
        <a id="manage" class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Seja Bem-vindo @UserManager.GetUserName(User)! @*@UserManager.GetUserId(User)*@</a>
    </li>
    <li class="nav-item">
        <form id="logoutForm" class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
            <button id="logout" type="submit" class="nav-link btn btn-link text-dark">Sair</button>
        </form>
    </li>
}

</ul>
